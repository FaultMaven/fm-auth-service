# FaultMaven Auth Service - Enterprise Edition
# Environment Configuration Example

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://faultmaven:your_password@localhost:5432/faultmaven_enterprise

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# ENTERPRISE MODE
# ============================================================================
ENTERPRISE_MODE=true
ENTERPRISE_EDITION=enterprise
ENABLE_MULTITENANCY=true

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8001

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://app.faultmaven.ai

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# SENTRY (Error Tracking & Monitoring)
# ============================================================================
# Uncomment and set your Sentry DSN for error tracking
# ENTERPRISE_SENTRY_DSN=https://your-key@sentry.io/project-id
# ENTERPRISE_ENABLE_METRICS=true
# ENTERPRISE_ENABLE_TRACING=true

# ============================================================================
# SSO DEFAULTS
# ============================================================================
ENTERPRISE_ENABLE_SSO=true
# ENTERPRISE_SAML_IDP_ENTITY_ID=https://idp.example.com/metadata
# ENTERPRISE_SAML_IDP_SSO_URL=https://idp.example.com/sso
# ENTERPRISE_SAML_IDP_X509_CERT=MIIDXTCCAkWgAwIBAgIJAKZ...

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-change-in-production

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENTERPRISE_ENABLE_AUDIT_LOGGING=true
ENTERPRISE_ENABLE_RBAC=true
ENTERPRISE_ENABLE_AUTO_PROVISIONING=true

# ============================================================================
# ORGANIZATION DEFAULTS
# ============================================================================
DEFAULT_MAX_USERS=10
DEFAULT_MAX_TEAMS=5
DEFAULT_PLAN=trial

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Set to true for development hot-reload
DEV_MODE=false
