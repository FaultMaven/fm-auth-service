# Auth Service Configuration

# Service Info
SERVICE_NAME=fm-auth-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database (for future PostgreSQL migration)
DATABASE_URL=postgresql+asyncpg://fm_auth:fm_auth_password@localhost:5432/fm_auth
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# JWT (Phase 1: HS256, Phase 2: RS256)
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=your-secret-key-change-in-production
# JWT_PRIVATE_KEY_PATH=/secrets/jwt-private-key.pem
# JWT_PUBLIC_KEY_PATH=/secrets/jwt-public-key.pem
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_AUTH=true
ENABLE_SSO=false

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090
